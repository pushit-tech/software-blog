{
  "name": "pushit.tech",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:e2e": "playwright test",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "extract:i18n": "formatjs extract './src/**/*.{js,ts,tsx}' --ignore='**/*.d.ts' --format simple --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file src/locales/langs/en.json",
    "compile:i18n": "formatjs compile-folder --ast --format simple src/locales/langs src/locales/compiled-langs",
    "i18n": "bun extract:i18n && npm run compile:i18n"
  },
  "dependencies": {
    "@lit/react": "^1.0.0",
    "@picocss/pico": "^1.5.10",
    "@playwright/test": "^1.39.0",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "lit": "^3.0.0",
    "next": "13.5.5",
    "next-contentlayer": "^0.3.4",
    "react": "^18",
    "react-dom": "^18",
    "react-intl": "^6.5.1",
    "sass": "^1.69.4"
  },
  "devDependencies": {
    "@formatjs/cli": "^6.2.1",
    "@formatjs/ts-transformer": "^3.13.6",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "13.5.5",
    "eslint-plugin-formatjs": "^4.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "typescript": "^5"
  }
}
